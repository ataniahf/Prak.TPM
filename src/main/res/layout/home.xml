<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back">

        <ImageView
            android:id="@+id/gambar"
            android:src="@drawable/lt"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_toRightOf="@+id/gambar"
            android:id="@+id/text1"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:textColor="@color/black"
            android:text="When u get insecurity remember that One Direction said"
            android:textStyle="bold"
            android:textSize="15pt"/>

        <TextView
            android:layout_below="@+id/gambar"
            android:id="@+id/text2"
            android:layout_width="200dp"
            android:layout_height="380dp"
            android:textColor="@color/black"
            android:text="Though it makes no sense to me
            You've never love the sound of your
            voice on tape
            You never want to know how much you weigh, you still have to squeeze
            into your jeans
            But you're perfect to me"
            android:textStyle="italic"
            android:textSize="10pt"/>

        <ImageView
            android:id="@+id/bunga"
            android:src="@drawable/flower"
            android:layout_width="200dp"
            android:layout_height="380dp"
            android:scaleType="centerCrop"
            android:layout_toRightOf="@+id/text2"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/gambar"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>